<%= form_with(model: friends_list) do |form| %>
  <% if friends_list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(friends_list.errors.count, "error") %> prohibited this friends_list from being saved:</h2>

      <ul>
        <% friends_list.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :first_name, class:"form-control", placeholder:"First Name" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone Number" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :email, class:"form-control", placeholder:"Email" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :notes, class:"form-control", placeholder:"Note(s)" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :friends_list_user_id, class:"form-control", value:current_user.id, type: :hidden %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class:'btn btn-secondary' %>
  </div>
<% end %>
