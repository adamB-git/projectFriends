

<div class="jumbotron">
  <h1 class="display-4"><%= @friends_list.first_name %> <%= @friends_list.last_name %></h1>
  <p class="lead">
    <%= @friends_list.phone %> | <%= @friends_list.email %><br>
    <hr class="my-4">
    Notes:<br>
    <%= @friends_list.notes %>
  </p>
  <br>
  <%= link_to 'Edit', edit_friends_list_path(@friends_list), class:"btn btn-dark" %>
  <%= link_to 'Remove', @friends_list, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %>
  <%= link_to 'Back', friends_lists_path, class:"btn btn-dark" %>
</div>
